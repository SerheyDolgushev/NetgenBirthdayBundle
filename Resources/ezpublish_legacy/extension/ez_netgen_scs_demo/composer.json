    "minimum-stability": "dev",
    "config": {
        "vendor-dir": ".."
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf ../composer/",
            "rm ../autoload.php",
            "cd ../../ && php bin/php/ezpgenerateautoloads.php -e && cd -"
        ],
        "post-update-cmd": [
            "rm -rf ../composer/",
            "rm ../autoload.php",
            "cd ../../ && php bin/php/ezpgenerateautoloads.php -e && cd -"
        ]
    }
