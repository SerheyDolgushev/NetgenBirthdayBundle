<form action="{{ form_action }}" method="post" {{ form_enctype(form) }} class="well form-search">

    <!-- form errors -->
    {{ form_errors(form) }}
    {% form_theme form 'NetgenSimpleContentStorageBundle:Form:dossier_filter_fields.html.twig' %}
    {#{ form_errors(form.term) }}

    {% form_theme form 'NetgenSimpleContentStorageBundle:Form:dossier_filter_fields.html.twig' %}

    {{ form_widget(form.term) }}

    {{ form_rest(form) }#}
    <div class="row">
        <div class="col-lg-8">
            <div class="form-group">
                {{ form_widget(form.term, {'attr' : {'class': 'form-control', }} ) }}
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.search_type, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.availability, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.status, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.affects, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.scope, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.area, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.subarea, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_widget(form.priority, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="col-lg-8">
            <div class="form-group">
                {{ form_widget(form.regulator, {'attr' : {'class': 'form-control'}} ) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <input class="btn btn-primary clear" type="submit" value="{{ 'Submit'|trans }}"/>
        </div>
    </div>

    {{ form_rest(form) }}

</form>