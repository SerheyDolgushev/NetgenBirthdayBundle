<ul class="nav navbar-nav brand">
    <li class="logo">
        <a href="{{ path( ezpublish.rootLocation ) }}">       
            {% if not ez_is_field_empty( content, 'logo') %}
                {% set image_variation = ez_image_alias( content.getField( 'logo' ), content.versionInfo, 'original' ) %}
